{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "react-hooks"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "no-unused-vars": "warn",
        "max-len": "off",
        "@typescript-eslint/ban-ts-comment": "warn",
        "require-jsdoc": "off",
        "valid-jsdoc": "off",
        "new-cap": "warn",
        "semi": [
            "error",
            "never"
        ],
        "eol-last": "off",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "error"
    },
    "ignorePatterns": ["storybook-static/**"],
    "globals": {
        "__IS_DEV__" : true
    }
}
